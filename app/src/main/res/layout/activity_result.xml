<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".ResultActivity">

    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_left_arrow"
        android:contentDescription="@string/desc"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewBack"
        app:srcCompat="@drawable/ic_home"
        android:contentDescription="@string/desc"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imageViewFinalImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewBack"
        app:layout_constraintVertical_bias="0.25"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/desc"/>

    <ImageView
        android:id="@+id/imageViewAllShare"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/grey_oval"
        android:padding="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewFacebookShare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFinalImage"
        app:srcCompat="@drawable/ic_share"
        android:contentDescription="@string/desc"/>

    <ImageView
        android:id="@+id/imageViewFacebookShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewWhatsAppShare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewAllShare"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFinalImage"
        app:srcCompat="@drawable/ic_facebook"
        android:contentDescription="@string/desc"/>

    <ImageView
        android:id="@+id/imageViewWhatsAppShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewInstagramShare"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewFacebookShare"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFinalImage"
        app:srcCompat="@drawable/ic_whatsapp"
        android:contentDescription="@string/desc"/>

    <ImageView
        android:id="@+id/imageViewInstagramShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageViewWhatsAppShare"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFinalImage"
        app:srcCompat="@drawable/ic_instagram"
        android:contentDescription="@string/desc"/>
</androidx.constraintlayout.widget.ConstraintLayout>